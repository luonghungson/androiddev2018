            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/feed4_ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_9gag"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_toRightOf="@+id/feed4_ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/feed4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9GAG"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/feed4_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4h"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#9a9d9e"/>
                <TextView
                    android:id="@+id/feed4_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Where am I? Who am I??"
                    android:layout_below="@+id/feed4_name"
                    android:textColor="#ffffff"/>
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/feed4_image"
                    android:layout_below="@+id/feed4_status"
                    android:layout_width="320dp"
                    android:layout_height="180dp"
                    android:src="@mipmap/whoami"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"/>
                <LinearLayout
                    android:layout_below="@+id/feed4_image"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_comment"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_retweet"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_love"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"/>
